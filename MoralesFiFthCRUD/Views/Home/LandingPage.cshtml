@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Shop</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Landingpagestyle.css">
    <style>
        body {
            background-color: #ffffff; /* Set background color to white */
        }

        .upper-layout {
            background-color: #006400; /* Dark green upper layout */
            color: #fff; /* Text color */
        }

        footer {
            background-color: #006400; /* Dark green footer */
            color: #fff; /* Text color */
        }

        .services-section {
            background-color: #ffffff; /* Set background color of services section to white */
        }

        .btn-primary {
            background-color: #006400; /* Dark green button */
            border-color: #006400; /* Dark green border */
        }

        .carousel-item img {
            width: 100%;
            height: auto;
        }
    </style>
</head>
<body>

    <!-- Upper Layout -->
    <div class="upper-layout">
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="#">Plant Shop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Create">Get Started</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Hero Section #image -->
        <header>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="https://images7.alphacoders.com/466/466444.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h1>Welcome to Plant Shop</h1>
                            <p>Find the perfect plants for your home</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://b.kisscc0.com/20180517/ycw/kisscc0-4k-resolution-high-definition-television-desktop-w-design-5afd64f8786cf8.5346136815265558964933.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h1>Transform Your Space</h1>
                            <p>Discover your green oasis with our exquisite collection of plants</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://res.cloudinary.com/simpleview/image/upload/v1674080712/clients/oakland/amy_thompson_photography_684A1607_9ab6111e-d6c2-4b29-a5e5-2788e84cb561.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h1>Experience Nature's Beauty</h1>
                            <p>Explore our stunning collection of plants and bring nature into your home</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </header>
    </div>

    <!-- Main Content -->
    <main class="py-5">
        <div class="container text-center">
            <h2>Discover Your Green Oasis</h2>
            <p class="lead">Transform your space with our exquisite collection of plants</p>
        </div>
    </main>

    <!-- Services Section -->
    <section class="services-section py-5">
        <div class="container">
            <h2 class="text-center mb-4">Our Services</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="text-center mb-4">
                        <svg class="lnr services-icon">
                            <use xlink:href="#lnr-leaf"></use>
                        </svg>
                        <h4>Wide Plant Selection</h4>
                        <p>Explore a diverse range of indoor and outdoor plants.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center mb-4">
                        <svg class="lnr services-icon">
                            <use xlink:href="#lnr-clock"></use>
                        </svg>
                        <h4>Fast Delivery</h4>
                        <p>Get your plants delivered swiftly and securely to your doorstep.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center mb-4">
                        <svg class="lnr services-icon">
                            <use xlink:href="#lnr-heart"></use>
                        </svg>
                        <h4>Expert Advice</h4>
                        <p>Receive personalized tips and guidance for plant care and maintenance.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="upper-layout">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h2>Find Your Perfect Plant</h2>
                        <p>Explore our wide selection of high-quality plants for every space and occasion.</p>
                    </div>
                    <div class="col-md-6">
                        <h2>PlantShop Anytime, Anywhere</h2>
                        <p>Experience the convenience of shopping for plants online with fast and reliable delivery.</p>
                    </div>
                </div>
            </div>
        </nav>
    </footer>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <!-- SVG Sprite -->
    <script src="https://cdn.linearicons.com/free/1.0.0/svgembedder.min.js"></script>

    <script>
    $('.carousel').carousel({
        interval: 3000 // Change the interval here (in milliseconds), e.g., 3 seconds #Sliding  image
    });
    </script>

</body>
</html>
