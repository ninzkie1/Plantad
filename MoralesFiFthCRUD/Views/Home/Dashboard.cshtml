@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/Content/dashboard.css" />

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
   

    <title>Plant Shop</title>
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Plant Shop</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <!-- Use ml-auto to push items to the right -->
                    <li class="nav-item">
                        <a class="nav-link" href="Shop">Shop</a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link" href="#here">About</a>
                    </li>
                    
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item">
                        @if (User.IsInRole("Seller"))
                        {
                            <a class="nav-link" href="~/Home/ResellerProfile">Profile</a>
                        }
                        else if (User.IsInRole("Buyer"))
                        {
                            <a class="nav-link" href="~/Home/UserProfile">Profile</a>
                        }
                        else
                        {
                            <a class="nav-link" href="#"></a>
                        }
                        

                    </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" style="background-image: url('https://www.w3schools.com/howto/img_forest.jpg');">
                    <div class="carousel-caption text-center">
                        <h1>Welcome to Plant Shop</h1>
                        <p>Find the perfect plants for your home</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Services Section -->
    <section>
        <div class="container">
            <h2 id="here" class="text-center mb-4">Our Services</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="text-center mb-4">
                        <svg class="lnr services-icon">
                            <use xlink:href="#lnr-leaf"></use>
                        </svg>
                        <h4>Wide Plant Selection</h4>
                        <p>Explore a wide variety of indoor and outdoor plants.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center mb-4">
                        <svg class="lnr services-icon">
                            <use xlink:href="#lnr-clock"></use>
                        </svg>
                        <h4>Fast Delivery</h4>
                        <p>Get your plants delivered quickly and safely to your doorstep.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center mb-4">
                        <svg class="lnr services-icon">
                            <use xlink:href="#lnr-heart"></use>
                        </svg>
                        <h4>Expert Advice</h4>
                        <p>Receive expert tips and guidance for plant care and maintenance.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Plants -->
    <section class="bg-light">
        <div class="container py-5">
            <h2 class="text-center mb-4">Featured Plants</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img class="card-img-top" src="https://www.w3schools.com/howto/img_fjords.jpg" alt="Plant Image">
                        <div class="card-body">
                            <h5 class="card-title">Succulent Plant</h5>
                            <p class="card-text">Perfect for small spaces and minimal care.</p>
                            <a href="Shop" class="btn btn-success">Shop Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img class="card-img-top" src="https://www.w3schools.com/howto/img_mountains.jpg" alt="Plant Image">
                        <div class="card-body">
                            <h5 class="card-title">Fiddle Leaf Fig</h5>
                            <p class="card-text">A statement plant for any room.</p>
                            <a href="Shop" class="btn btn-success">Shop Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img class="card-img-top" src="https://www.w3schools.com/howto/img_lights.jpg" alt="Plant Image">
                        <div class="card-body">
                            <h5 class="card-title">Monstera Deliciosa</h5>
                            <p class="card-text">Known for its unique leaf shape and easy care.</p>
                            <a href="Shop" class="btn btn-success">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-4 text-center">
        <div class="container">
            <p>&copy;Ninzkie</p>
        </div>
    </footer>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <!-- SVG Sprite -->
    <script src="https://cdn.linearicons.com/free/1.0.0/svgembedder.min.js"></script>

</body>
</html>
