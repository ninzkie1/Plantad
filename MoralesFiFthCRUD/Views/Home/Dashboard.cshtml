@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
        }

        .navbar {
            background-color: #155724; /* Dark green */
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: #fff;
        }

        .carousel-item {
            height: 100vh; /* Full viewport height */
            min-height: 300px;
            background: no-repeat center center;
            background-size: cover;
        }

        section {
            padding: 4rem 0;
        }

        .services-icon {
            font-size: 60px;
            margin-bottom: 20px;
            color: #28a745; /* Green */
        }

        .card {
            border: none;
            height: 100%;
        }

        .card-img-top {
            height: 200px; /* Adjust image height */
            object-fit: cover;
        }

        .card-title {
            font-weight: bold;
        }

        .card-body {
            height: 100%;
        }
    </style>

    <title>Plant Shop</title>
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Plant Shop</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <!-- Use ml-auto to push items to the right -->
                    <li class="nav-item">
                        <a class="nav-link" href="Shop">Shop</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#here">About</a>
                    </li>
                    <!-- Navigation For Seller & Buyer -->
                        @if (User.Identity.IsAuthenticated)
                        {
                        <li class="nav-item">
                            @if (User.IsInRole("Seller"))
                            {
                                <a class="nav-link" href="~/Home/ResellerProfile">Profile</a>
                            }
                            else if (User.IsInRole("Buyer"))
                            {
                                <a class="nav-link" href="~/Home/UserProfile">Profile</a>
                            }
                            else
                            {
                                <a class="nav-link" href="#"></a>
                            }

                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
       <!-- Hero Section #image -->
        <header>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2018/11/17/22/15/trees-3822149_1280.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h1>Welcome to Plant Shop</h1>
                            <p>Find the perfect plants for your home</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://b.kisscc0.com/20180517/ycw/kisscc0-4k-resolution-high-definition-television-desktop-w-design-5afd64f8786cf8.5346136815265558964933.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h1>Transform Your Space</h1>
                            <p>Discover your green oasis with our exquisite collection of plants</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://res.cloudinary.com/simpleview/image/upload/v1674080712/clients/oakland/amy_thompson_photography_684A1607_9ab6111e-d6c2-4b29-a5e5-2788e84cb561.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h1>Experience Nature's Beauty</h1>
                            <p>Explore our stunning collection of plants and bring nature into your home</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </header>
        <!-- Services Section -->
        <section>
            <div class="container">
                <h2 id="here" class="text-center mb-4">Our Services</h2>
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center mb-4">
                            <svg class="lnr services-icon">
                                <use xlink:href="#lnr-leaf"></use>
                            </svg>
                            <h4>Wide Plant Selection</h4>
                            <p>Explore a wide variety of indoor and outdoor plants.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center mb-4">
                            <svg class="lnr services-icon">
                                <use xlink:href="#lnr-clock"></use>
                            </svg>
                            <h4>Fast Delivery</h4>
                            <p>Get your plants delivered quickly and safely to your doorstep.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center mb-4">
                            <svg class="lnr services-icon">
                                <use xlink:href="#lnr-heart"></use>
                            </svg>
                            <h4>Expert Advice</h4>
                            <p>Receive expert tips and guidance for plant care and maintenance.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Featured Plants -->
        <section class="bg-light">
            <div class="container py-5">
                <h2 class="text-center mb-4">Featured Plants</h2>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card mb-4 h-100">
                            <!-- Ensure all cards have equal height -->
                            <img class="card-img-top" src="https://c02.purpledshub.com/uploads/sites/40/2023/01/MG0462-Mixed-succulents-202797c.jpg" alt="Succulent Plant">
                            <div class="card-body">
                                <h5 class="card-title">Succulent Plant</h5>
                                <p class="card-text">Perfect for small spaces and minimal care.</p>
                                <a href="Shop" class="btn btn-success">Check it now!</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4 h-100">
                            <!-- Ensure all cards have equal height -->
                            <img class="card-img-top" src="https://dy1yydbfzm05w.cloudfront.net/media/catalog/product/cache/466bc07fdd9f3406dd5cbfa6621097e2/f/i/fiddle-leaf_fig_plant_1.jpg" alt="Fiddle Leaf Fig">
                            <div class="card-body">
                                <h5 class="card-title">Fiddle Leaf Fig</h5>
                                <p class="card-text">A statement plant for any room.</p>
                                <a href="Shop" class="btn btn-success">Check it now!</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4 h-100">
                            <!-- Ensure all cards have equal height -->
                            <img class="card-img-top" src="https://thepalmssydney.com.au/cdn/shop/files/TPNursery-300.jpg?v=1707110373" alt="Fiddle Leaf Fig">
                            <div class="card-body">
                                <h5 class="card-title">Monstera Deliciosa</h5>
                                <p class="card-text">Known for its unique leaf shape</p>
                                <a href="Shop" class="btn btn-success">Check it now!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="py-4 text-center">
            <div class="container">
                <p>&copy; 2024 Plant Shop</p>
            </div>
        </footer>

        <!-- Bootstrap JS and jQuery -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

        <!-- SVG Sprite -->
        <script src="https://cdn.linearicons.com/free/1.0.0/svgembedder.min.js"></script>
    <script>
    $('.carousel').carousel({
        interval: 3000 // Change the interval here (in milliseconds), e.g., 3 seconds #Sliding  image
    });
    </script>

    </body>
</html>