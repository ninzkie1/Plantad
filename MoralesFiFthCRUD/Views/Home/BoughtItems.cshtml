@model List<MoralesFiFthCRUD.ViewModels.ProductViewModel>

<style>
   
    .larger-text {
        font-size: 50px;
    }
    .table{
         font-size: 20px;
    }
</style>

<h2 class="larger-text">Bought Items</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Purchase Date</th>
                <th>Seller</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.PurchaseDate.ToString("MM/dd/yyyy")</td>

                    <td>@item.sellerName</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"></td>
                <td>Total: @Model.Sum(p => p.TotalPrice)</td>
                <td colspan="2"></td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <p class="larger-text">You haven't bought any items yet.</p>
}
